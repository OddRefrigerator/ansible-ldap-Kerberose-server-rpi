#
# LDAP Defaults
#
# See ldap.conf(5) for details
# This file should be world readable but not world writable.

HOST         {{ hostName }}
BASE	     {{ ldapBaseDN }}
LDAP_VERSION 3
BINDDN cn=admin,{{ ldapBaseDN }}
BINDPW {{ ldapAdminpw }}
URI ldap://{{ hostName }}

#SIZELIMIT	12
#TIMELIMIT	15
#DEREF		never

# TLS certificates (needed for GnuTLS)
#TLS_CACERT	/etc/ssl/certs/ldap.crt
SASL_MECH GSSAPI
SASL_REALM {{ krb5realm }}
krb5_ccname /var/run/nslcd/nslcd.tkt
